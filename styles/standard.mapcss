node|z13[railway=tram_stop]
{
	z-index: 6000;
	icon-image: "icons/tramstop.png";
	icon-width: 10;
	icon-height: 10;
}

node|z14-[railway=tram_stop]
{
	z-index: 6000;
	text: "name";
	text-position: auto;
	font-size: 10;
	text-color: #D877B8;
	font-weight: bold;
	font-family: Arial;
	text-halo-radius: 1;
	text-halo-color: white;
}

